<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="5px">


	<ImageView android:id="@+id/movie_image"
	android:layout_height="100px" android:layout_width="150px"
	android:paddingRight="5px" android:src="@drawable/reel_film" />


	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/movie_title" />

</LinearLayout>
